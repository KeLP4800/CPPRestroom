<% layout('layouts/boilerplate') %>

    <h1>All restroom</h1>
    <ul>
        <% for(let restroom of restrooms) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= restroom.image%>">
                    </div>

                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= restroom.title %>
                            </h5>
                            <p class="card-text">
                                <%= restroom.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= restroom.location %>
                                </small>
                            </p>
                            <a href="/restrooms/<%= restroom._id %>" class="btn btn-primary">View <% restroom.title %>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
            <% } %>
    </ul>